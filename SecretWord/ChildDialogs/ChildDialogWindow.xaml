<Window x:Class="SecretWord.ChildDialogs.ChildDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecretWord.ChildDialogs"
        mc:Ignorable="d" 
        WindowStartupLocation="CenterScreen"
        Title="{Binding Title}" 
        SizeToContent="WidthAndHeight" 
        MinHeight="40" MinWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Button x:Name="oKay" IsDefault="True" Grid.Row="1" Content="OK" HorizontalAlignment="Right" MinWidth="50"/>
        <ContentPresenter Content="{Binding View}"/>
    </Grid>
</Window>
